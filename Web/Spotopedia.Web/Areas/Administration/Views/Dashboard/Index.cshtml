@model Spotopedia.Web.ViewModels.Administration.Dashboard.IndexViewModel

<head>
    <!-- Bulma Version 0.9.0-->
    <link rel="stylesheet" href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css" />
</head>

<body class="myDIV">
    <div class="container">
        <div class="columns">
            <div class="column is-12">
                <section class="inner_page_head">
                    <div class="container_fuild">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="full">
                                    <h3>Admin Dashboard</h3>
                                    <h4>Hello, @User.Identity.Name</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <br>
                <section class="info-tiles">
                    <div class="tile is-ancestor has-text-centered">
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">@Model.UsersCount</p>
                                <p class="subtitle">Users</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">@Model.SpotsCount</p>
                                <p class="subtitle">Spots</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">@Model.PostsCount</p>
                                <p class="subtitle">Posts</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">@Model.ActiveChallengesCount</p>
                                <p class="subtitle">Active Challenges</p>
                            </article>
                        </div>
                    </div>
                </section>
                <div class="columns">
                    <div class="column is-4">
                        <div class="card events-card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Spots for approval
                                </p>
                                <a href="#" class="card-header-icon" aria-label="more options">
                                    <span class="icon">
                                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                                    </span>
                                </a>
                            </header>
                            <div class="card-table">
                                <div class="content">
                                    <table class="table is-fullwidth is-striped">
                                        <tbody>
                                            @foreach (var spot in Model.Spots)
                                            {
                                                <tr>
                                                    <td width="5%"><i class="fa fa-bell-o"></i></td>
                                                    <td><a asp-area="Administration" asp-controller="Spots" asp-action="ById" asp-route-id="@spot.Id"> @spot.Title</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @*<footer class="card-footer">
                                    <a href="#" class="card-footer-item">View All</a>
                                </footer>*@
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="card events-card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Spots Reports
                                </p>
                                <a href="#" class="card-header-icon" aria-label="more options">
                                    <span class="icon">
                                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                                    </span>
                                </a>
                            </header>
                            <div class="card-table">
                                <div class="content">
                                    <table class="table is-fullwidth is-striped">
                                        <tbody>
                                            @foreach (var reportedSpot in Model.ReportedSpots)
                                            {
                                                <tr>
                                                    <td width="5%"><i class="fa fa-bell-o"></i></td>
                                                    <td><a asp-area="Administration" asp-controller="Spots" asp-action="ReportedSpot" asp-route-id="@reportedSpot.Id" style="color: red"> @reportedSpot.Title - @reportedSpot.Reports.Count() Reports</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @*<footer class="card-footer">
                                    <a href="#" class="card-footer-item">View All</a>
                                </footer>*@
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="card events-card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Posts Reports
                                </p>
                                <a href="#" class="card-header-icon" aria-label="more options">
                                    <span class="icon">
                                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                                    </span>
                                </a>
                            </header>
                            <div class="card-table">
                                <div class="content">
                                    <table class="table is-fullwidth is-striped">
                                        <tbody>
                                            @foreach (var reportedPost in Model.ReportedPosts)
                                            {
                                                <tr>
                                                    <td width="5%"><i class="fa fa-bell-o"></i></td>
                                                    <td><a asp-area="Administration" asp-controller="Posts" asp-action="ReportedPost" asp-route-id="@reportedPost.Id" style="color: red"> @reportedPost.Content - @reportedPost.Reports.Count() Reports</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @*<footer class="card-footer">
                                    <a href="#" class="card-footer-item">View All</a>
                                </footer>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script async type="text/javascript" src="../js/bulma.js"></script>
    <script>
        function myFunction() {
            let root = document.documentElement;
            let x = document.getElementById("img");
            // let videoVal = document.video;
            // let h1Val = document.h1;
            root.classList.toggle("dark-mode");
            x.classList.toggle("inverted");
            // pictureVal.classList.toggle("inverted");
            // videoVal.classList.toggle("inverted");
            // h1Val.classList.toggle("inverted");
        }
    </script>
</body>