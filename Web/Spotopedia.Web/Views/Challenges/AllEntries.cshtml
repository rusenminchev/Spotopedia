@model Spotopedia.Web.ViewModels.Challenges.AllChallengesViewModel

@foreach (var challenge in Model.Challenges)
{

<div class="container">
  <div class="row">
    <div class="col-sm-12">
     <div class="card text-left my-4">
       <!-- navigation in .card-header -->
       <div class="card-header">
         <ul class="nav nav-tabs card-header-tabs">
           <li class="nav-item">
             <a class="nav-link active" data-toggle="tab" href="#tab1">Challenge</a>
           </li>
           <li class="nav-item">
             <a class="nav-link" data-toggle="tab" href="#tab2">All Entries</a>
           </li>
         </ul>
       </div>
       <!-- .card-body.tab-content  -->
       <div class="card-body tab-content">
         <div class="tab-pane fade show active" id="tab1">
           <h4 class="card-title">@challenge.Name</h4>
           <p class="card-text">@challenge.Description</p>
           <a asp-controller="ChallengeEntries" asp-action="Create" asp-route-id="@challenge.Id" class="btn btn-warning">Join the challenge</a>
         </div>
         <div class="tab-pane fade" id="tab2">
           <h4 class="card-title"></h4>
           <p class="card-text">
            @foreach (var challengeEntry in challenge.ChallengeEntries.OrderByDescending(x=>x.CreatedOn))
            {
                <div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center"> <img src="@challengeEntry.AddedByUserAvatarImageUrl" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3"> <a href="javascript:void(0)" data-abc="true">@challengeEntry.AddedByUserFirstName @challengeEntry.AddedByUserLastName</a>
                            <div class="text-muted small">@challengeEntry.CreatedOn.ToLocalTime()</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">@challengeEntry.Caption</p>
                    <img src="@challengeEntry.ChallengeEntryImageImageUrl" class="card-img-top" alt="...">
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="px-4 pt-3"> <a href="javascript:void(0)" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">445</span> </a> <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">14532</span> </span> </div>
                </div>
            </div>
        </div>
    </div>
</div>
            }
            </p>
            <a asp-controller="ChallengeEntries" asp-action="Create" asp-route-id="@challenge.Id" class="btn btn-warning">Join the challenge</a>
         </div>
          </div><!--/.card-body -->
      </div><!--/.card-->
    </div><!--/.col-sm-6 --> 
        </div><!-- /.card-body -->
      </div><!-- /.card -->
}

 

