        <label asp-for="Address.AddressName"></label>
        <input asp-for="Address.AddressName" class="form-control" />
        <span asp-validation-for="Address.AddressName" class="text-danger"></span>
    </div>*@
  <div>    
    <p></p>
 <fieldset class="gllpLatlonPicker">
    <label asp-for="Address.AddressName"></label>
    <input asp-for="Address.AddressName" type="text" class="gllpSearchField" >
    <input type="button" class="gllpSearchButton" value="search">
	<div class="gllpMap">Google Maps</div>
	<input asp-for="Address.Latitude"   type="hidden" class="gllpLatitude" value="20"/>
	<input asp-for="Address.Longitude"  type="hidden" class="gllpLongitude" value="20"/>
	<input type="hidden" class="gllpZoom" value="3"/>
  </fieldset>
</div>
    <p></p>
<div class="row justify-content-sm-between">
        @for (int i = 0; i < 3; i++)
        {
            <div class="image mb-2" id="@("preview-picture" + i)">
                <label for="@("image" + i)" class="image-upload"></label>
                <input type="file" asp-for="Images" id="@("image" + i)" class="image-upload" />
            </div>
        }
    </div>
<div>
    <p></p>
    <input type="submit" class="btn btn-primary" />
</form>

