@model Spotopedia.Web.ViewModels.Posts.AllPostsViewModel

@{

 }

<div class="container-fluid mt-100">
    @foreach (var post in Model.Posts)
    {
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center"> <img src="https://i.imgur.com/iNmBizf.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3"> <a href="javascript:void(0)" data-abc="true">@post.AddedByUserUserName</a>
                            <div class="text-muted small">@post.CreatedOn</div>
                        </div>
                        <div class="text-muted small ml-3">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                           @if (post.PostImages.Count > 0)
                {
                            <img src="@post.PostImages.FirstOrDefault().ImageUrl" class="card-img-top" alt="...">
                }
            <div class="card-body">
                <h5 class="card-title"><a asp-action="Details" asp-route-id="@post.Id"></a></h5>
                <p class="card-text">@post.Caption</p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="text-muted small ml-3 row">
                            <form id="votesForm" method="post"></form>
                            <div>
                                <a href="#" onclick="sendVote(@post.Id, true)">
                                    <i class="fa fa-thumbs-up"></i>
                                </a>
                            </div>
                            <div id="likesCount">@post.LikesCount</div>
                            <div id="dislikesCount">@post.DislikesCount</div>
                            <div>
                                <a href="#" onclick="sendVote(@post.Id, false)">
                                    <i class="fa fa-thumbs-down"></i>
                                </a>
                            </div>
                    <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp; Reply</button> </div>
                </div
            </div>
        </div>
    </div>
</div>
</div>
    }

@section Scripts{ 

<script>
        function sendVote(postId, isLiked) {
            var token = $("#votesForm input[name=__RequestVerificationToken]").val();
            var json = { postId: postId, isLiked: isLiked };
            $.ajax({
                url: "/api/postVotes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': token },
                success: function (data) {
                   $("#likesCount").html(data.likesCount);
                   $("#dislikesCount").html(data.dislikesCount);
                }
            });
        }
    </script>
}