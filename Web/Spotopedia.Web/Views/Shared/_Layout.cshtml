@using Spotopedia.Common
<!DOCTYPE html>
<html lang="en">
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link href="~/css/jquery-gmaps-latlon-picker.css" rel="stylesheet" asp-append-version="true" />
    @*<link href="~/css/styles.css" rel="stylesheet" asp-append-version="true" />*@
    <link href="~/css/leaflet.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/leaflet-geosearch/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" rel="stylesheet" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <!-- Basic -->
    <meta charset="utf-8" />

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="~/theme/images/favicon.png" type="">
    <title>Famms - Fashion HTML Template</title>
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/theme/css/bootstrap.css" />
    <!-- font awesome style -->
    <link href="~/theme/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/theme/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/theme/css/responsive.css" rel="stylesheet" />
</head>
<body>
    <!-- header section strats -->
    <header class="header_section">
        <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img width="250" src="https://res.cloudinary.com/defgu4hed/image/upload/c_crop,h_42,w_231/v1638468425/Spotopedia_logo_gigo3a.png" alt="#" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Spots" asp-action="Map">Map</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Spots" asp-action="Create">Add Spot</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="All">News Feed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Challenges" asp-action="All">Challenges</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>
    <!-- end header section -->

    <div class="container-body">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">

            @this.RenderBody()
        </main>
    </div>

    <!-- footer start -->
    <br>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="full">
                        <div class="logo_footer">
                            <a href="#"><img width="210" src="https://res.cloudinary.com/defgu4hed/image/upload/c_crop,h_42,w_231/v1638468425/Spotopedia_logo_gigo3a.png" alt="#" /></a>
                        </div>
                        <div class="information_f">
                            <p><strong>EMAIL:</strong> rusenminchev@gmail.com</p>
                            <div class="footer_social">
                                <a href="https://www.facebook.com/rusen.minchev">
                                    <i class="fa fa-facebook" aria-hidden="true"></i>
                                </a>
                                <a href="https://www.twitter.com/rusenminchev">
                                    <i class="fa fa-twitter" aria-hidden="true"></i>
                                </a>
                                <a href="https://www.linkedin.com/goldgrippin">
                                    <i class="fa fa-linkedin" aria-hidden="true"></i>
                                </a>
                                <a href="https://www.instagram.com/rusenminchev">
                                    <i class="fa fa-instagram" aria-hidden="true"></i>
                                </a>
                                <a href="https://www.goldgrippin.com">
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="widget_menu">
                                        <h3>Menu</h3>
                                        <ul>
                                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                            <li><a asp-controller="Spots" asp-action="Create">Add Spot</a></li>
                                            <li><a asp-controller="Posts" asp-action="All">News Feed</a></li>
                                            <li><a asp-controller="Challenges" asp-action="All">Challenges</a></li>
                                            <li><a asp-controller="Home" asp-action="About">About</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <div class="cpy_">
        <p class="mx-auto">
            Copyright © 2021 <a asp-controller="Home" asp-action="Index">Spotopedia</a><br>
        </p>
    </div>
    <!-- footer end -->

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery-2.1.1.min.js"></script>
    <script src="~/js/jquery-gmaps-latlon-picker.js"></script>
    <script src="//maps.googleapis.com/maps/api/js?key=AIzaSyAPx2JcdwZpcpUTRCssV2DEURihT8mRsBU&sensor=false" asp-append-version="true"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/js/leaflet.js" asp-append-version="true"></script>
    <script src="~/lib/leaflet-geosearch/bundle.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)

    <!-- jQery -->
    <!--<script src="~/theme/js/jquery-3.4.1.min.js" asp-append-version="true"></script>-->
    <!-- popper js -->
    <!--<script src="~/theme/js/popper.min.js" asp-append-version="true"></script>-->
    <!-- bootstrap js -->
    <!--<script src="~/theme/js/bootstrap.js" asp-append-version="true"></script>-->
    <!-- custom js -->
    <!--<script src="~/theme/js/custom.js" asp-append-version="true"></script>-->
</body>
</html>
